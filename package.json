{
  "name": "forexradar",
  "version": "1.0.0",
  "description": "Track historical Visa and Mastercard exchange rates",
  "type": "module",
  "scripts": {
    "backfill": "cd backend && bun run backfill-orchestrator.js",
    "ecb-backfill": "cd backend && bun run ecb-backfill.js",
    "daily": "cd backend && bun run daily-update.js",
    "validate": "cd backend && bun run validate-data.js",
    "typecheck": "bunx tsc --noEmit",
    "check": "bun run typecheck",
    "lint": "eslint js shared backend",
    "precommit": "bun run lint && bun run check && bun run test:unit",
    "ci": "bun run lint && bun run check && bun run test:unit && bun run test:integration && bun run test:smoke && bun run test:e2e",
    "lint:fix": "eslint js shared backend --fix",
    "postinstall": "cd backend && bunx playwright install firefox chromium",
    "test": "bunx playwright test --config=tests/playwright.config.js",
    "test:unit": "bun test tests/unit/",
    "test:smoke": "bunx playwright test --config=tests/playwright.config.js",
    "test:e2e": "bunx playwright test --config=tests/playwright.e2e.config.js",
    "test:integration": "bun test tests/integration/",
    "test:contract": "bun test tests/contract/visa-response.test.js tests/contract/ecb-response.test.js",
    "test:contract:all": "bun test tests/contract/",
    "test:contract:mc": "bun test tests/contract/mastercard-response.test.js",
    "test:perf": "bun test tests/perf/data-loading.test.js",
    "test:perf:browser": "bunx playwright test --config=tests/playwright.perf.config.js",
    "test:chromium": "bunx playwright test --config=tests/playwright.config.js --project=chromium",
    "test:firefox": "bunx playwright test --config=tests/playwright.config.js --project=firefox",
    "test:headed": "bunx playwright test --config=tests/playwright.config.js --headed",
    "test:ui": "bunx playwright test --config=tests/playwright.config.js --ui",
    "test:all": "bun run test:unit && bun run test:smoke && bun run test:e2e"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@playwright/test": "^1.40.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^20.0.0",
    "apexcharts": "^5.3.6",
    "eslint": "9.39.2",
    "globals": "17.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avishj/ForexRadar.git"
  },
  "keywords": [
    "forex",
    "exchange-rates",
    "visa",
    "mastercard",
    "currency"
  ],
  "author": "Avish J",
  "license": "AGPL-3.0-only"
}
